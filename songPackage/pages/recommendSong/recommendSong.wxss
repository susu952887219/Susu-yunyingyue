/* 头部区域 */
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date{
  position: absolute;
  left: 52.5%;
  top:  52.5%;
  margin-left: -125rpx;
  margin-top: -50rpx;
  width: 250rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.recommendSongContainer .header .date .day{
  font-size: 30rpx;
}
/* 列表区域 */
.listContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore{
  float: right;
}
/* 内容区 */
.listScroll{
  /* 让头部区域固定 */
  /* 100vh - 头部区域高度 - 内容区域的头部高度 */
  height: calc(100vh - 100rpx - 80rpx);
}
.scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;

}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.scrollItem .musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.scrollItem .musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem .musicInfo .author{
  display: flex;
}
.scrollItem .musicInfo .author text{
  margin-right: 10rpx;
}
.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}